<?xml version="1.0" encoding="utf-8"?>
<resources>
	<declare-styleable name="Chessboard">
		<attr name="whiteCellsColor" format="color"/>
		<attr name="blackCellsColor" format="color"/>
		<attr name="whiteCellsBackground" format="reference|color"/>
		<attr name="blackCellsBackground" format="reference|color"/>
		<attr name="cellsSize" format="dimension"/>
		<attr name="enableNotation" format="boolean"/>
		<attr name="notationTextSize" format="dimension|float"/>
		<attr name="notationTextColor" format="color"/>
		<!-- The typeface for text notation: This is the path for typeface font in assets directory ! -->
		<attr name="notationTypeface" format="string"/>
		<attr name="notationBackground" format="reference|color"/>
	</declare-styleable>
</resources>
